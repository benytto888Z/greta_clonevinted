{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe
{% endblock %}

{% block body %}

	<div class="row justify-content-center mt-4">
		<div class="col-md-6">

			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}

		</div>

	</div>

	<div class="row justify-content-center mt-4">
		<div class="col-md-6">
			<h1>Modifier votre mot de passe</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small>
					Entrer votre email et nous vous enverrons un lien pour modifier votre mot de passe
				</small>
			</div>

			<button class="btn btn-primary">Envoyez le lien de recuperation</button>
			{{ form_end(requestForm) }}

		</div>

	</div>

{% endblock %}
